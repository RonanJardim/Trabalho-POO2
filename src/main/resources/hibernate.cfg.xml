<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration">
                                                                                             
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/Trabalho_POO2</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">33218600</property>
    
        <property name="hibernate.hbm2ddl.auto">update</property>   
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <mapping class="domain.Cliente"></mapping>
       <mapping class="domain.Endereco"></mapping>
        <mapping class="domain.Cidade"></mapping>
        <mapping class="domain.Estado"></mapping>
        <mapping class="domain.Regiao"></mapping>
        <mapping class="domain.Reserva"></mapping>
        <mapping class="domain.Empresa"></mapping>
        <mapping class="domain.Voos"></mapping>
        <mapping class="domain.Check_in"></mapping>
        <mapping class="domain.Aviao"></mapping>
    </session-factory>
</hibernate-configuration>
